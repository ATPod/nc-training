            <!--<url-pattern>/jsp/manager/*</url-pattern>-->
            <!--<include-prelude>/jsp/nav.jspf</include-prelude>-->
        <!--</jsp-property-group>-->
        <!--<jsp-property-group>-->
            <!--<url-pattern>/jsp/customer/*</url-pattern>-->
            <!--<include-prelude>/jsp/nav.jspf</include-prelude>-->
        <!--</jsp-property-group>-->
        <!--<jsp-property-group>-->
            <!--<url-pattern>/jsp/developer/*</url-pattern>-->
            <!--<include-prelude>/jsp/nav.jspf</include-prelude>-->
        <!--</jsp-property-group>-->
    </jsp-config>

</web-app>
